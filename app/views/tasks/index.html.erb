<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>My Tasks</h1>
      <div class="form-check">
        <% @tasks.each do |task| %>
          <input class="form-check-input" type="checkbox" disabled <%= task.completed ? "checked" : ""%>><%= link_to task.title, task_path(task) %>
          <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
          <br>
        <!--   <p><%= task.completed %></p> -->
        <% end %>
      </div>
      <%= link_to '<i class="fas fa-plus"></i> Add a new task'.html_safe, new_task_path %>
    </div>
  </div>
</div>
